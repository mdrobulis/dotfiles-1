    "newcap"        : true,
    "noarg"         : true,
    "noempty"       : true,
    "nonbsp"        : true,
    "nonew"         : true,
    "plusplus"      : false, // i like plusplus
    "quotmark"      : true,
    "undef"         : true,
    "unused"        : true,
    "strict"        : true,
    "trailing"      : true,
    "maxparams"     : null,
    "maxdepth"      : null,
    "maxstatements" : null,
    "maxcomplexity" : null,
    "maxlen"        : null,

    /** relaxing options */

    "asi"           : false,
    "boss"          : false,
    "debug"         : false,
    "eqnull"        : false,
    "esnext"        : false,
    "evil"          : false,
    "expr"          : false,
    "funcscope"     : false,
    "gcl"           : false,
